@using RunGroupAplication.ViewModels
@model EditUserDashboardViewModel


<form asp-action="EditUserProfile" method="post" enctype="multipart/form-data">
    <input type="hidden" name ="Id" id="Id" asp-for="Id" />
    <h3 class="mt-3">Fill in the information to make your profile complete.</h3>
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" placeholder="First Name">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname">Surname</label>
        <input asp-for="Surname" class="form-control" placeholder="Surname">
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Enter your phone number</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Info">Say something about yourself</label>
        <textarea asp-for="Info" class="form-control" placeholder="Info"></textarea>
        <span asp-validation-for="Info" class="text-danger"></span>
    </div>
    <h5>Please enter your address</h5>
    <hr/>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" placeholder="Street">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" placeholder="Street">
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <h5>Some additional infos:</h5>
    <hr/>
    <div class="form-group">
        <label asp-for="Pace">Pace</label>
        <input asp-for="Pace" class="form-control" placeholder="Pace">
        <span asp-validation-for="Pace" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mileage">Mileage</label>
        <input asp-for="Mileage" class="form-control" placeholder="Mileage">
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>
    <h5>Chose your profile image.</h5>
    <hr/>
    <div class="form-group">
        <label asp-for="Image"> Profile Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-dark mt-4 mb-4">Submit</button>
    <a class=" mt-4 mb-4 btn btn-outline-danger " asp-controller="Dashboard" asp-action="Index">Cancel<i class="bi bi-x-circle" style="margin-left: 3px"></i></a>
</form>
