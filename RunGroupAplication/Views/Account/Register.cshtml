@using RunGroupAplication.ViewModels

@model RegisterViewModel;

@{
    ViewData["Title"] = "Sign up";
}

<div class="row">
    <div class="col-md-6 offset-3">

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="modal-content rounded-4 shadow account-custom">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-2">Sign up</h1>
            </div>
            <div class="modal-body p-5 pt-0">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">

                        <input asp-for="EmailAddress" class="form-control rounded-3" id="floatingInput" placeholder="name@example.com">
                        <label asp-for="EmailAddress" class="control-label" for="floatingInput">Email address</label>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">

                        <input asp-for="Password" class="form-control rounded-3 type="password" id="floatingInput" placeholder="Password" />
                        <label asp-for="Password" class="control-label" for="floatingInput">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">

                        <input asp-for="ConfirmPassword" class="form-control rounded-3 type="password" id="floatingInput" placeholder="Confirm Password" />
                        <label asp-for="ConfirmPassword" class="control-label" for="floatingInput">Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success custom-button w-100 mb-2 btn btn-lg rounded-3">
                        Sign Up <i class="bi bi-person-plus-fill"></i>
                    </button>
                    <a class="w-100 py-2 mb-2 btn btn-outline-danger rounded-3" asp-controller="Club" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>