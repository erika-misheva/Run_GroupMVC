<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Running Force</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RunGroupAplication.styles.css" asp-append-version="true" />
</head>
<body>
         <header class="p-3 text-bg-dark">
               <div class="container">
                    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                       

                        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2 text-secondary">Home</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                            <li><a asp-area ="" asp-controller="User" asp-action="Index" class="nav-link px-2 text-white">Find Runners</a>

                            </li>
                            <li><a asp-area="" asp-controller="Race" asp-action="Index" class="nav-link px-2 text-white">Find Races</a></li>
                            <li><a asp-area="" asp-controller="Club" asp-action="Index" class="nav-link px-2 text-white">Find Clubs</a></li>
                            <li><a asp-area="" asp-controller="Dashboard" asp-action="Index" class="nav-link px-2 text-white">Dashboard</a></li>
                            }
                            else
                            {
                            <li><a asp-area="" asp-controller="Race" asp-action="Index" class="nav-link px-2 text-white">Find Races</a></li>
                            <li><a asp-area="" asp-controller="Club" asp-action="Index" class="nav-link px-2 text-white">Find Clubs</a></li>
                            }
                        </ul>


                        <div class="text-end">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-area="" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="btn btn-dark">Logout</button>
                                </form>
                            }
                            else
                            {
                            <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-outline-light me-2">Log in</a>
                            <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-warning">Sign-up</a>
                            }
                        </div>
                    </div>
                </div>
        </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container custom-container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center my-4 border-top bg-black">
            <p class="col-md-4 mb-0 text-body-secondary ml-auto text-white">&copy; 2023 - RunGroupAplication</p>

            <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2 text-body-secondary text-white">Home</a></li>
                <li class="nav-item"><a asp-area="" asp-controller="Race" asp-action="Index" class="nav-link px-2 text-body-secondary text-white">Find Races</a></li>
                <li class="nav-item"><a asp-area="" asp-controller="Club" asp-action="Index" class="nav-link px-2 text-body-secondary text-white">Find Clubs</a></li>
            </ul>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
